<Window x:Class="PrettyLogcat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PrettyLogcat.Converters"
        Title="PrettyLogcat - Android Logcat Viewer" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToTextWrappingConverter x:Key="BooleanToTextWrappingConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:LogLevelToTextBrushConverter x:Key="LogLevelToTextBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#37474F" Foreground="White">
            <!-- File Menu -->
            <MenuItem Header="_File" Foreground="White">
                <MenuItem Header="_Open Log File..." Command="{Binding OpenFileCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‚" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Save Logs..." Command="{Binding SaveLogsCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸšª" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            
            <!-- ADB Menu -->
            <MenuItem Header="_ADB" Foreground="White">
                <MenuItem Header="_Restart ADB Server" Click="RestartAdbMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”„" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Connect _MuMu Emulator (127.0.0.1:16416)" Click="ConnectMuMuMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“±" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Connect _LDPlayer (127.0.0.1:5555)" Click="ConnectLDPlayerMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“±" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Quick _Screenshot" Click="QuickScreenshotMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“¸" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            
            <!-- Help Menu -->
            <MenuItem Header="_Help" Foreground="White">
                <MenuItem Header="_About PrettyLogcat" Click="AboutMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â„¹ï¸" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_User Guide" Click="UserGuideMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“–" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#2196F3" Padding="16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="ðŸ“±" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="PrettyLogcat" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Device Selection -->
                    <ComboBox ItemsSource="{Binding Devices}" 
                              SelectedItem="{Binding SelectedDevice}"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                              Width="200" Margin="0,0,16,0"/>
                    
                    <!-- Connect/Disconnect Button -->
                    <Button Command="{Binding ConnectCommand}" 
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”—" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding ConnectButtonText}"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Refresh Devices -->
                    <Button Command="{Binding RefreshDevicesCommand}" 
                            Background="#FF9800"
                            Foreground="White"
                            Padding="8,6"
                            Content="ðŸ”„"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Filters and Controls -->
            <Border Grid.Column="0" Margin="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Log Level Filters -->
                        <TextBlock Text="Log Levels" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <StackPanel>
                            <CheckBox Content="Verbose" IsChecked="{Binding ShowVerbose}" Foreground="{StaticResource VerboseBrush}"/>
                            <CheckBox Content="Debug" IsChecked="{Binding ShowDebug}" Foreground="{StaticResource DebugBrush}"/>
                            <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" Foreground="{StaticResource InfoBrush}"/>
                            <CheckBox Content="Warning" IsChecked="{Binding ShowWarn}" Foreground="{StaticResource WarnBrush}"/>
                            <CheckBox Content="Error" IsChecked="{Binding ShowError}" Foreground="{StaticResource ErrorBrush}"/>
                            <CheckBox Content="Fatal" IsChecked="{Binding ShowFatal}" Foreground="{StaticResource FatalBrush}"/>
                        </StackPanel>

                        <Separator Margin="0,16"/>

                        <!-- Text Filters -->
                        <TextBlock Text="Filters" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        
                        <!-- Message Filter (First) -->
                        <TextBlock Text="Filter by Message" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <ComboBox Text="{Binding MessageFilter, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding MessageFilterHistory}"
                                  IsEditable="True"
                                  Margin="0,0,0,12"/>
                        
                        <!-- Tag Filter -->
                        <TextBlock Text="Filter by Tag" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <ComboBox Text="{Binding TagFilter, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding TagFilterHistory}"
                                  IsEditable="True"
                                  Margin="0,0,0,12"/>
                        
                        <!-- PID Filter -->
                        <TextBlock Text="Filter by PID" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- PIDè¾“å…¥æ¡† -->
                            <ComboBox Grid.Column="0" 
                                      Text="{Binding PidFilter, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding PidFilterHistory}"
                                      IsEditable="True"
                                      Margin="0,0,4,0"/>
                            
                            <!-- åŒ…åé€‰æ‹©æŒ‰é’® -->
                            <Button Grid.Column="1" 
                                    Content="ðŸ“±ðŸ“‹" 
                                    Width="30" 
                                    Height="22"
                                    FontSize="10"
                                    Padding="2"
                                    ToolTip="Select PID by Package Name"
                                    Click="SelectPidByPackage_Click"/>
                        </Grid>

                        <!-- Control Buttons -->
                        <Button Command="{Binding ClearLogsCommand}" 
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,6"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,4,0"/>
                                <TextBlock Text="Clear Logs"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,16"/>

                        <!-- Statistics -->
                        <TextBlock Text="Statistics" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Logs:" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalLogCount}" FontSize="12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Filtered Logs:" FontSize="12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FilteredLogCount}" FontSize="12"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ConnectionStatus}" FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Right Panel - Log Display -->
            <Border Grid.Column="2" Margin="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="8">
                        <DockPanel>
                            <TextBlock Text="Logcat Output" FontSize="16" FontWeight="Bold" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <ToggleButton IsChecked="{Binding AutoScroll}" 
                                              Background="#E0E0E0"
                                              Content="â¬‡ï¸"
                                              ToolTip="Auto Scroll - Automatically scroll to bottom when new logs arrive"
                                              Margin="0,0,8,0"/>
                                <ToggleButton IsChecked="{Binding WordWrap}" 
                                              Background="#E0E0E0"
                                              Content="ðŸ”¤"
                                              ToolTip="Word Wrap - Enable text wrapping for long log messages"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Secondary Search (Hidden for now) -->
                    <Border Grid.Row="1" Background="#FAFAFA" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0"
                            Visibility="Collapsed">
                        <DockPanel>
                            <TextBlock Text="Secondary Search:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                            <Button DockPanel.Dock="Right" 
                                    Content="âœ•" 
                                    Command="{Binding ClearSecondarySearchCommand}"
                                    ToolTip="Clear Search"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="4,0,0,0"/>
                            <TextBox Text="{Binding SecondarySearchText, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     Padding="8,4"
                                     Background="White"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>
                        </DockPanel>
                    </Border>

                    <!-- Pinned Logs -->
                    <Border Grid.Row="2" Background="#F0F4F8" Padding="0" 
                            Visibility="{Binding PinnedLogs.Count, Converter={StaticResource CountToVisibilityConverter}}"
                            BorderThickness="2" BorderBrush="#2196F3" CornerRadius="4" Margin="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Expandable Header (Clickable entire area) -->
                            <Border Grid.Row="0" Background="#2196F3" Padding="8,6" 
                                    MouseLeftButtonDown="PinnedLogsHeader_MouseLeftButtonDown"
                                    Cursor="Hand" CornerRadius="2,2,0,0">
                                <DockPanel>
                                    <TextBlock x:Name="PinnedLogsToggleIcon" 
                                               Text="â–¼" 
                                               FontSize="12" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               DockPanel.Dock="Left"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="ðŸ“Œ Pinned Logs" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="{Binding PinnedLogs.Count, StringFormat='({0})'}" 
                                               FontSize="11" Foreground="#E3F2FD" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                </DockPanel>
                            </Border>
                            
                            <!-- Separator Line -->
                            <Rectangle Grid.Row="1" Height="2" Fill="#1976D2" HorizontalAlignment="Stretch"/>
                            
                            <!-- Pinned Logs DataGrid with ScrollViewer -->
                            <ScrollViewer Grid.Row="1" 
                                          x:Name="PinnedLogsScrollViewer"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Background="#FAFBFC"
                                          MaxHeight="200" Margin="0,2,0,0">
                                <DataGrid x:Name="PinnedLogsDataGrid"
                                          ItemsSource="{Binding PinnedLogs}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="None"
                                          CanUserResizeColumns="False"
                                          CanUserSortColumns="False"
                                          VirtualizingPanel.IsVirtualizing="False"
                                          ScrollViewer.CanContentScroll="False"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                          FontFamily="Consolas, Courier New, monospace"
                          FontSize="11"
                                          Background="#FAFBFC"
                                          AlternatingRowBackground="#F0F4F8"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Top"
                                          BorderThickness="0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding TimeStamp, StringFormat=HH:mm:ss.fff}" Width="90"
                                                            Visibility="{Binding DataContext.ShowTimeColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <DataGridTemplateColumn Width="50"
                                                                Visibility="{Binding DataContext.ShowLevelColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Level}" 
                                                               Foreground="{Binding LevelBrush}"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Binding="{Binding Pid}" Width="50"
                                                            Visibility="{Binding DataContext.ShowPidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <DataGridTextColumn Binding="{Binding Tid}" Width="50"
                                                            Visibility="{Binding DataContext.ShowTidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <DataGridTextColumn Binding="{Binding Tag}" Width="100"
                                                            Visibility="{Binding DataContext.ShowTagColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <DataGridTemplateColumn Width="*"
                                                                Visibility="{Binding DataContext.ShowMessageColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Message}" 
                                                               Foreground="{Binding Level, Converter={StaticResource LogLevelToTextBrushConverter}}"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Message}"
                                                               VerticalAlignment="Center"
                                                               Padding="2,1"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <EventSetter Event="MouseDoubleClick" Handler="PinnedLogItem_MouseDoubleClick"/>
                                            <Setter Property="MinHeight" Value="22"/>
                                            <Setter Property="Padding" Value="2,1"/>
                                        </Style>
                                    </DataGrid.RowStyle>
                                </DataGrid>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Separator between Pinned Logs and Main Logs -->
                    <Border Grid.Row="3" Height="4" Background="#E1F5FE" 
                            Visibility="{Binding PinnedLogs.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                    
                    <!-- Log Content -->
                    <!-- Log Content with Floating Button -->
                    <Grid Grid.Row="4">
                        <!-- DataGrid -->
                        <DataGrid x:Name="LogDataGrid"
                                  ItemsSource="{Binding DisplayedLogs}"
                                  SelectedItem="{Binding SelectedLogEntry}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.CanContentScroll="True"
                                  FontFamily="Consolas, Courier New, monospace"
                                  FontSize="12"
                                  ScrollViewer.ScrollChanged="LogDataGrid_ScrollChanged">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF1976D2"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy" Command="{Binding CopyLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“‹"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Pin/Unpin" Command="{Binding PinLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“Œ"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Jump to Log" Command="{Binding JumpToLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ”"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <EventSetter Event="ContextMenuOpening" Handler="ColumnHeader_ContextMenuOpening"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu x:Name="ColumnHeaderContextMenu">
                                            <MenuItem Header="Show/Hide Columns" IsEnabled="False" FontWeight="Bold"/>
                                            <Separator/>
                                            <MenuItem Header="Time" IsCheckable="True" x:Name="TimeColumnMenuItem"/>
                                            <MenuItem Header="Level" IsCheckable="True" x:Name="LevelColumnMenuItem"/>
                                            <MenuItem Header="PID" IsCheckable="True" x:Name="PidColumnMenuItem"/>
                                            <MenuItem Header="TID" IsCheckable="True" x:Name="TidColumnMenuItem"/>
                                            <MenuItem Header="Tag" IsCheckable="True" x:Name="TagColumnMenuItem"/>
                                            <MenuItem Header="Message" IsCheckable="True" x:Name="MessageColumnMenuItem"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeStamp, StringFormat=HH:mm:ss.fff}" Width="100"
                                                Visibility="{Binding DataContext.ShowTimeColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTemplateColumn Header="Level" Width="60"
                                                    Visibility="{Binding DataContext.ShowLevelColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Level}" 
                                                   Foreground="{Binding LevelBrush}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="60"
                                                Visibility="{Binding DataContext.ShowPidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTextColumn Header="TID" Binding="{Binding Tid}" Width="60"
                                                Visibility="{Binding DataContext.ShowTidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="120"
                                                Visibility="{Binding DataContext.ShowTagColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTemplateColumn Header="Message" Width="*"
                                                    Visibility="{Binding DataContext.ShowMessageColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Message}" 
                                                   Foreground="{Binding Level, Converter={StaticResource LogLevelToTextBrushConverter}}"
                                                   TextWrapping="{Binding DataContext.WordWrap, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToTextWrappingConverter}}"
                                                   Padding="4,2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Floating Scroll to Bottom Button -->
                        <Button x:Name="ScrollToBottomButton"
                                Command="{Binding ScrollToBottomCommand}"
                                Visibility="{Binding ShowScrollToBottomButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,20,20"
                                Width="50"
                                Height="50"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"
                                ToolTip="Scroll to bottom and enable auto-scroll"
                                Style="{x:Null}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="25"
                                            BorderBrush="#1976D2"
                                            BorderThickness="2">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.3"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0D47A1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel>
                                <TextBlock Text="â¬‡" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="ðŸ”„" FontSize="12" HorizontalAlignment="Center" Margin="0,-5,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Welcome/Status Overlay -->
                    <Border Grid.Row="4" 
                            Background="White"
                            Visibility="{Binding ShowWelcomeMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“±" FontSize="64" 
                                       HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock Text="{Binding WelcomeMessage}" 
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#37474F" Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}" DockPanel.Dock="Left" Foreground="White"/>
                <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                             Width="100" Height="4" 
                             DockPanel.Dock="Right"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>