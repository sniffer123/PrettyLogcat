<Window x:Class="PrettyLogcat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PrettyLogcat.Converters"
        Title="PrettyLogcat - Android Logcat Viewer" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToTextWrappingConverter x:Key="BooleanToTextWrappingConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:LogLevelToTextBrushConverter x:Key="LogLevelToTextBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="ðŸ“±" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="PrettyLogcat" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Device Selection -->
                    <ComboBox ItemsSource="{Binding Devices}" 
                              SelectedItem="{Binding SelectedDevice}"
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                              Width="200" Margin="0,0,16,0"/>
                    
                    <!-- Connect/Disconnect Button -->
                    <Button Command="{Binding ConnectCommand}" 
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”—" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding ConnectButtonText}"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Refresh Devices -->
                    <Button Command="{Binding RefreshDevicesCommand}" 
                            Background="#FF9800"
                            Foreground="White"
                            Padding="8,6"
                            Content="ðŸ”„"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Filters and Controls -->
            <Border Grid.Column="0" Margin="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Log Level Filters -->
                        <TextBlock Text="Log Levels" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <StackPanel>
                            <CheckBox Content="Verbose" IsChecked="{Binding ShowVerbose}" Foreground="{StaticResource VerboseBrush}"/>
                            <CheckBox Content="Debug" IsChecked="{Binding ShowDebug}" Foreground="{StaticResource DebugBrush}"/>
                            <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" Foreground="{StaticResource InfoBrush}"/>
                            <CheckBox Content="Warning" IsChecked="{Binding ShowWarn}" Foreground="{StaticResource WarnBrush}"/>
                            <CheckBox Content="Error" IsChecked="{Binding ShowError}" Foreground="{StaticResource ErrorBrush}"/>
                            <CheckBox Content="Fatal" IsChecked="{Binding ShowFatal}" Foreground="{StaticResource FatalBrush}"/>
                        </StackPanel>

                        <Separator Margin="0,16"/>

                        <!-- Text Filters -->
                        <TextBlock Text="Filters" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        
                        <!-- Message Filter (First) -->
                        <TextBlock Text="Filter by Message" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <ComboBox Text="{Binding MessageFilter, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding MessageFilterHistory}"
                                  IsEditable="True"
                                  Margin="0,0,0,12"/>
                        
                        <!-- Tag Filter -->
                        <TextBlock Text="Filter by Tag" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <ComboBox Text="{Binding TagFilter, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding TagFilterHistory}"
                                  IsEditable="True"
                                  Margin="0,0,0,12"/>
                        
                        <!-- PID Filter -->
                        <TextBlock Text="Filter by PID" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- PIDè¾“å…¥æ¡† -->
                            <ComboBox Grid.Column="0" 
                                      Text="{Binding PidFilter, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding PidFilterHistory}"
                                      IsEditable="True"
                                      Margin="0,0,4,0"/>
                            
                            <!-- åŒ…åé€‰æ‹©æŒ‰é’® -->
                            <Button Grid.Column="1" 
                                    Content="ðŸ“±" 
                                    Width="30" 
                                    Height="22"
                                    ToolTip="Select PID by Package Name"
                                    Click="SelectPidByPackage_Click"/>
                        </Grid>

                        <!-- Control Buttons -->
                        <Button Command="{Binding ClearLogsCommand}" 
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,6"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,4,0"/>
                                <TextBlock Text="Clear Logs"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding SaveLogsCommand}" 
                                Background="#2196F3"
                                Foreground="White"
                                Padding="12,6"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¾" Margin="0,0,4,0"/>
                                <TextBlock Text="Save Logs"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding OpenFileCommand}" 
                                Background="#FF9800"
                                Foreground="White"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‚" Margin="0,0,4,0"/>
                                <TextBlock Text="Open File"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,16"/>

                        <!-- Statistics -->
                        <TextBlock Text="Statistics" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Logs:" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalLogCount}" FontSize="12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Filtered Logs:" FontSize="12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FilteredLogCount}" FontSize="12"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ConnectionStatus}" FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Right Panel - Log Display -->
            <Border Grid.Column="2" Margin="8" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="8">
                        <DockPanel>
                            <TextBlock Text="Logcat Output" FontSize="16" FontWeight="Bold" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <ToggleButton IsChecked="{Binding AutoScroll}" 
                                              Background="#E0E0E0"
                                              Content="â¬‡ï¸"
                                              ToolTip="Auto Scroll - Automatically scroll to bottom when new logs arrive"
                                              Margin="0,0,8,0"/>
                                <ToggleButton IsChecked="{Binding WordWrap}" 
                                              Background="#E0E0E0"
                                              Content="ðŸ”¤"
                                              ToolTip="Word Wrap - Enable text wrapping for long log messages"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Secondary Search -->
                    <Border Grid.Row="1" Background="#FAFAFA" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                        <DockPanel>
                            <TextBlock Text="Secondary Search:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                            <Button DockPanel.Dock="Right" 
                                    Content="âœ•" 
                                    Command="{Binding ClearSecondarySearchCommand}"
                                    ToolTip="Clear Search"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="4,0,0,0"/>
                            <TextBox Text="{Binding SecondarySearchText, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     Padding="8,4"
                                     Background="White"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>
                        </DockPanel>
                    </Border>

                    <!-- Pinned Logs -->
                    <Border Grid.Row="2" Background="#F9FFF9" Padding="0" 
                            Visibility="{Binding PinnedLogs.Count, Converter={StaticResource CountToVisibilityConverter}}"
                            BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Compact Header -->
                            <Border Grid.Row="0" Background="#F0F8F0" Padding="8,4" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                                <DockPanel>
                                    <TextBlock Text="ðŸ“Œ Pinned Logs" FontSize="11" FontWeight="Medium" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding PinnedLogs.Count, StringFormat='({0})'}" 
                                               FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </DockPanel>
                            </Border>
                            
                            <!-- Pinned Logs DataGrid -->
                            <DataGrid Grid.Row="1" 
                                      ItemsSource="{Binding PinnedLogs}"
                                      MaxHeight="150"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="None"
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.CanContentScroll="True"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                      FontFamily="Consolas, Courier New, monospace"
                                      FontSize="11"
                                      Background="White"
                                      AlternatingRowBackground="#FAFAFA">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding TimeStamp, StringFormat=HH:mm:ss.fff}" Width="90"
                                                        Visibility="{Binding DataContext.ShowTimeColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <DataGridTemplateColumn Width="50"
                                                            Visibility="{Binding DataContext.ShowLevelColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Level}" 
                                                           Foreground="{Binding LevelBrush}"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Binding="{Binding Pid}" Width="50"
                                                        Visibility="{Binding DataContext.ShowPidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <DataGridTextColumn Binding="{Binding Tid}" Width="50"
                                                        Visibility="{Binding DataContext.ShowTidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <DataGridTextColumn Binding="{Binding Tag}" Width="100"
                                                        Visibility="{Binding DataContext.ShowTagColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <DataGridTemplateColumn Width="*"
                                                            Visibility="{Binding DataContext.ShowMessageColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Message}" 
                                                           Foreground="{Binding Level, Converter={StaticResource LogLevelToTextBrushConverter}}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Message}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <EventSetter Event="MouseDoubleClick" Handler="PinnedLogItem_MouseDoubleClick"/>
                                        <Setter Property="Height" Value="20"/>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Log Content -->
                    <DataGrid Grid.Row="3" 
                              x:Name="LogDataGrid"
                              ItemsSource="{Binding DisplayedLogs}"
                              SelectedItem="{Binding SelectedLogEntry}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              ScrollViewer.CanContentScroll="True"
                              FontFamily="Consolas, Courier New, monospace"
                              FontSize="12">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy" Command="{Binding CopyLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“‹"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Pin/Unpin" Command="{Binding PinLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“Œ"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Jump to Log" Command="{Binding JumpToLogCommand}" CommandParameter="{Binding SelectedLogEntry}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ”"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Show/Hide Columns" IsEnabled="False" FontWeight="Bold"/>
                                            <Separator/>
                                            <MenuItem Header="Time" IsCheckable="True" IsChecked="{Binding DataContext.ShowTimeColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            <MenuItem Header="Level" IsCheckable="True" IsChecked="{Binding DataContext.ShowLevelColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            <MenuItem Header="PID" IsCheckable="True" IsChecked="{Binding DataContext.ShowPidColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            <MenuItem Header="TID" IsCheckable="True" IsChecked="{Binding DataContext.ShowTidColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            <MenuItem Header="Tag" IsCheckable="True" IsChecked="{Binding DataContext.ShowTagColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            <MenuItem Header="Message" IsCheckable="True" IsChecked="{Binding DataContext.ShowMessageColumn, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeStamp, StringFormat=HH:mm:ss.fff}" Width="100"
                                                Visibility="{Binding DataContext.ShowTimeColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTemplateColumn Header="Level" Width="60"
                                                    Visibility="{Binding DataContext.ShowLevelColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Level}" 
                                                   Foreground="{Binding LevelBrush}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="60"
                                                Visibility="{Binding DataContext.ShowPidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTextColumn Header="TID" Binding="{Binding Tid}" Width="60"
                                                Visibility="{Binding DataContext.ShowTidColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="120"
                                                Visibility="{Binding DataContext.ShowTagColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DataGridTemplateColumn Header="Message" Width="*"
                                                    Visibility="{Binding DataContext.ShowMessageColumn, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Message}" 
                                                   Foreground="{Binding Level, Converter={StaticResource LogLevelToTextBrushConverter}}"
                                                   TextWrapping="{Binding DataContext.WordWrap, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToTextWrappingConverter}}"
                                                   Padding="4,2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Welcome/Status Overlay -->
                    <Border Grid.Row="3" 
                            Background="White"
                            Visibility="{Binding ShowWelcomeMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“±" FontSize="64" 
                                       HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock Text="{Binding WelcomeMessage}" 
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#37474F" Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}" DockPanel.Dock="Left" Foreground="White"/>
                <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                             Width="100" Height="4" 
                             DockPanel.Dock="Right"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>